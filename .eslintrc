{
  "extends": "standard",
  "plugins": ["jest"],
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error"
  }
}

